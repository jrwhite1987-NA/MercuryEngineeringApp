<UserControl x:Class="MercuryEngApp.Views.FPGAUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              VerticalAlignment="Stretch"  HorizontalAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource ResourceKey=RoundedBorderBlue}" 
                    Width="550"
                    Height="250" 
                    VerticalAlignment="Top" 
                    Margin="10,5,0,0" 
                    Grid.Column="0" 
                    Grid.Row="0"
                HorizontalAlignment="Left"/>
        <Grid Name="LeftFPGAInfo" Width="550" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

           
            
            <TextBlock  Grid.Row="0" Grid.Column="0"
                                    Text="Register"
                                    Margin="10,15,0,0"
                                    Style="{StaticResource ResourceKey=WhiteLable15pt}"/>

            <TextBlock  Grid.Row="1" Grid.Column="0"
                                    Text="Value"
                                    Margin="10,15,0,0"
                                    Style="{StaticResource ResourceKey=WhiteLable15pt}"/>

            <Border  Style="{StaticResource ResourceKey=RoundedBorderCombo}" 
                                 Grid.Row="0"
                                 Grid.Column="1"  Width="310" />
            <ComboBox Width="300" 
                                 Height="25"
                                    IsReadOnly="False"
                                      IsEditable="True"
                                      ItemsSource="{Binding Path=BoardPartNumberList, Mode=TwoWay}"
                                      SelectedItem="{Binding Path=SelectedBoardPartNumber}"        
                                  Style="{StaticResource ResourceKey=ComboBoxBorder}"
                                 Grid.Row="0" 
                                 Grid.Column="1" 
                                 Margin="3,5,5,5"/>

            <TextBox Width="309" 
                                 Height="25" 
                                 Grid.Row="1"
                                 Text="{Binding Path=BoardSerialNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Style="{StaticResource ResourceKey=MainTextbox}"
                                 Grid.Column="1" 
                                 Margin="0,8,5,8"/>


            <Button Content="Read" 
                                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                                    Grid.Column="2" 
                                    Grid.Row="2" 
                                    Width="125" 
                                    Height="45" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" />

            <Button Content="Write" 
                                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                                    Grid.Column="2" 
                                    Grid.Row="2" 
                                    Width="125" 
                                IsEnabled="False"
                                    Height="45" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" 
                                    Margin="0,0,5,0"/>


            <Button Content="Reset" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}"
                    Grid.Row="4"  Width="125"   
                    Grid.RowSpan="3"
                    Height="45" 
                    Grid.Column="2" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" />

            <Button Content="Set All Defaults" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                    Grid.Column="2" 
                    Grid.Row="4" 
                    Grid.RowSpan="3"
                    Width="125" 
                    Height="45" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,0,5,0"/>


        </Grid>


    </Grid>
</UserControl>
