            <Button Content="Envelope" 
                    Style="{StaticResource ResourceKey=ButtonEnvelopeToggle}" 
                    Margin="0,15.5,13,0" 
                    VerticalAlignment="Top" 
                    Width="97" 
                    HorizontalAlignment = "Right"
                    Height="105"/>
            
            <ToggleButton x:Name = "tb" Margin="0,105.5,12,0"
                      VerticalAlignment="Top"  
