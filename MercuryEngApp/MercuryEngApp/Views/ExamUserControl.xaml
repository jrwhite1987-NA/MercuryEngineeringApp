        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="255" Grid.Column="1" Grid.Row="0" Width="715" Margin="0,5,10,0">
            <customControl:CustomSlider
                Visibility="Visible"
                x:Name="SpectrogramSlider"
                HorizontalAlignment="Right"   
                VerticalAlignment="Center"
                CustomVerticalDecreaseRectColor="Transparent"
                CustomVerticalTrackRectColor="Transparent"                
                CustomMinimum="0" IsHorizontalLineEnabled="Visible"
                CustomMaximum="127"   IsHitTestVisible="True"                           
                CustomValue="64" 
                ScaleEnable="True" ScaleFor="EditSpectrogram" 
                CustomHeight="255"  Height="255"              
                CustomWidth="673" Width="673" FontFamily="Arial"  Canvas.ZIndex="10" />
            <Image Grid.Row="0" 
                   Margin="62,10,10,10" 
                   x:Name="imageSpectrogram" 
                   Stretch="Fill" 
                   Panel.ZIndex="2" >                
            </Image>
            
            <Rectangle Stroke="#1c2040"  
                       RadiusX="8" 
                       RadiusY="8" 
                       StrokeThickness="2" 
                       Fill="Black" />
            
            <Line Stretch="Fill" 
                  Stroke="#FF1C2040" 
                  Y1="1" 
                  HorizontalAlignment="Left" 
                  Margin="60,0,0,0" />
        </Grid>
        <Grid HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="top" Height="232" Grid.Row="1" Width="715"  Margin="0,-0,10,0">
            <Image Grid.Row="1" 
                   Margin="62,10,10,10" 
                   x:Name="imageMmode" 
                   Stretch="Fill" 
                   Panel.ZIndex="2">                
