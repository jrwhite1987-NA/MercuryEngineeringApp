                  Stroke="#FF1C2040" 
                  Y1="1" 
                  HorizontalAlignment="Left" 
                  Margin="60,0,0,0"/>
        <customControl:CustomSlider
        	    Visibility="Visible"
        	    x:Name="customDepthSlider"
        	    HorizontalAlignment="Right"
                VerticalAlignment="Center"
                CustomVerticalDecreaseRectColor="Transparent"
                CustomVerticalTrackRectColor="Transparent"
        	    CustomMaximum="90"
        	    CustomMinimum="20"
                IsHorizontalLineEnabled="Visible"
        	    CustomHeight="232"
                ScaleEnable="True"
                CustomButtonTextUnit="Depth"
        	    Width="673" CustomWidth="673"  
                FontFamily="Arial" Canvas.ZIndex="10" 
                />

      
