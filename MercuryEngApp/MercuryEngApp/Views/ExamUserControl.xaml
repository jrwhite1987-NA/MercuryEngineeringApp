<UserControl x:Class="MercuryEngApp.ExamUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:clr="clr-namespace:System;assembly=mscorlib"
             xmlns:customControl="clr-namespace:MercuryEngApp.Controls"
             mc:Ignorable="d" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"
             x:Name="ExamControl">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="270"/>
            <RowDefinition Height="290"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="296" Margin="10,5,0,0" Grid.Column="0" Grid.Row="0" Width="580">
            <Rectangle Stroke="#02486e"  
                       RadiusX="8" 
                       RadiusY="8" 
                       StrokeThickness="2" 
                       Margin="0,0,0,40"/>

            <TextBlock Text="Power (%) (0-100)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17"/>

            <TextBox Height="29" 
                     Text="{Binding Path=Power, Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}" 
                     FontSize="18" 
                     Style="{StaticResource ResourceKey=MainTextbox}" 
                     Margin="215,12,269,0" 
                     VerticalAlignment="Top"
                     Padding="5,2,3,0" Width="90" 
                     TextAlignment="Center"/>

            <TextBox  Height="29" 
                      TextWrapping="Wrap" 
                      Text="{Binding Path=PacketPower, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      FontSize="18" 
                      HorizontalAlignment="Right" 
                      TextAlignment="Center"
                      Margin="215,12,16,0" 
                      VerticalAlignment="Top" 
                      Padding="5,2,3,0" 
                      Width="90" 
                      IsReadOnly="True" 
                      Style="{StaticResource ResourceKey=TexboxDisable}">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Content="Send" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                    Margin="338.5,9.751,136.5,254.249"
                    Click="SendPower"
					Height="33"
                    Width="105" />

            <TextBox   Height="29" Style="{StaticResource ResourceKey=MainTextbox}"
                       Text="{Binding Path=Depth, Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                       FontSize="18" 
                       Margin="218,49,272,0" 
                       VerticalAlignment="Top"
                       Padding="5,2,3,0" 
                       Width="90" 
                       TextAlignment="Center"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=TexboxDisable}"
                     Text="{Binding Path=PacketDepth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     Margin="0,49,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0"
                     Width="90" IsReadOnly="True" 
                     TextAlignment="Center">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Content="Send"
                    Style="{StaticResource ResourceKey=ButtonStyle1}" Margin="338.5,47.167,136.5,215.833"
                    Width="105"
					Height="33"
                    Click="SendDepth"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=MainTextbox}"
                     Text="{Binding Path=Filter, Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                     FontSize="18"  
                     Margin="218,86,272,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=TexboxDisable}" 
                     Text="{Binding Path=PacketFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     Margin="0,86,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" IsReadOnly="True" 
                     TextAlignment="Center">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Content="Send" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                    Margin="338.5,83.668,136.5,179.332" 
                    Height="33"
                    Width="105"

                    Click="SendFilter"/>
            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=MainTextbox}"
                     Text="{Binding Path=SVol, Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                     FontSize="18"  
                     Margin="218,124,272,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=TexboxDisable}"
                     Text="{Binding Path=PacketSVol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     Margin="0,124,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     IsReadOnly="True" 
                     TextAlignment="Center">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Content="Send" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}" 
                    Margin="338.5,121.668,136.5,141.332" 
                    Width="105"
                    Height="33"
                    Click="SendLength"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=MainTextbox}"
                     Text="{Binding Path=StartDepth, Mode=OneWayToSource, UpdateSourceTrigger=LostFocus}"
                     FontSize="18" 
                     TextAlignment="Center"
                     Margin="218,162,272,0"
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90"/>

            <TextBox Height="29" 
                     Style="{StaticResource ResourceKey=TexboxDisable}"
                     Text="{Binding Path=PacketStartDepth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     Margin="0,162,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     IsReadOnly="True" 
                     TextAlignment="Center">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button Content="Send" 
                    Style="{StaticResource ResourceKey=LargeButtonStyle}" 
                    Margin="336,160,134,62" 
                    Width="110"
                    Click="SendPRF"/>

            <Border  Style="{StaticResource ResourceKey=RoundedBorderCombo}" 
                                  Margin="218,200,0,66" Width="90" Height="30"  />
            <ComboBox Height="25" 
                      IsReadOnly="False"
                      IsEditable="True"
                      ItemsSource="{Binding Path=PRFList, Mode=TwoWay}"
                      SelectedItem="{Binding Path=SelectedPRF}"
                     Style="{StaticResource ResourceKey=ComboBoxBorder}"
                     FontSize="18"
                	 Margin="218,202,272,0"
                     VerticalAlignment="Top"
                     Padding="5,2,3,0"
                     Width="80"/>

            <TextBox Height="29" 
                     Text="{Binding Path=PacketPRF, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     TextAlignment="Center"
                     Margin="0,202,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     IsReadOnly="True" 
                     Style="{StaticResource ResourceKey=TexboxDisable}">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Depth (mm) (23-146)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17" 
                       Margin="0,38,0,0"/>

            <TextBlock Text="Filter (Hz) (25-2400)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17" 
                       Margin="0,75,0,0"/>

            <TextBlock Text="S Volume (mm) (2-12)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17" 
                       Margin="0,112,0,0" />

            <TextBlock Text="Start Depth (mm) (23-146)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17" 
                       Margin="0,149,0,0" 
                       Height="57" 
                       Width="216"/>

            <TextBlock Text="PRF (k) (5,6.25,8,10,12.5)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="17" 
                       Margin="0,189,0,0" 
                       Height="57" 
                       Width="223"/>
        </Grid>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="230" Grid.Column="0" Width="580" Grid.Row="1" Margin="10,0,0,0">
            <Rectangle   
                Stroke="#02486e"  
                RadiusX="8" 
                RadiusY="8" 
                StrokeThickness="2" 
                Margin="0,0,0,0" />

            <TextBlock Text="To" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="12,5,0,0" 
                       Margin="207,4,0,0" 
                       VerticalAlignment="Top"/>

            <TextBlock Text="Mean (cm/s)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="20" 
                       Margin="0,19,0,0"/>

            <TextBlock Text="Min (cm/s)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="20,5,0,0" 
                       Margin="0,75,0,0"/>

            <TextBox Height="29" 
                     Text="{Binding Path=PosMean, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     Style="{StaticResource ResourceKey=TexboxDisable}" 
                     Margin="217,34,273,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Text="Max (cm/s)" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="20,5,0,0" 
                       Margin="0,113,0,0"/>

            <TextBlock Text="PI" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="20,5,0,0" 
                       Margin="0,150,0,0"/>

            <TextBlock Text="TIC" 
                       Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="20,5,0,0" 
                       Margin="0,187,0,0"/>

            <TextBox Height="29" 
                     Text="{Binding Path=PosMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     Margin="217,70,273,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>
            <TextBox Height="29" 
                     Text="{Binding Path=PosMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     Margin="217,107,273,0"
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>
            <TextBox Height="29"
                     Text="{Binding Path=PosPI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18" 
                     Margin="217,144,273,0"
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0"
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>
            <TextBox Height="29" 
                     Text="{Binding Path=TIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18"
                     Margin="217,182,273,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>
            <TextBlock Text="Away" Style="{StaticResource ResourceKey=WhiteLable15pt}" 
                       Padding="12,5,0,0" 
                       Margin="327,0,0,0" 
                       VerticalAlignment="Top"
					   HorizontalAlignment="Left"/>

            <TextBox Height="29" 
                     Text="{Binding Path=NegMean, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     Margin="338,34,152,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>

            <TextBox Height="29"
                     Text="{Binding Path=NegMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                     Margin="338,72,152,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>

            <TextBox Height="29"
                     Text="{Binding Path=NegMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18" 
                     Margin="338,109,152,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>

            <TextBox Height="29" 
                     Text="{Binding Path=NegPI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="18" 
                	 Margin="338,146,152,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" Width="90" 
                     TextAlignment="Center"  
                     IsReadOnly="True">

                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
                <TextBox.Style>
                    <StaticResource ResourceKey="TexboxDisable"/>
                </TextBox.Style>
            </TextBox>

            <ToggleButton x:Name="btnEnvelop" Content="Envelope On" 
                    Style="{StaticResource ResourceKey=ButtonStyle2}" 
                    Margin="0,30,10,0" 
                    VerticalAlignment="Top" 
                    Width="133" Height="39"                                      
                    HorizontalAlignment = "Right"
                    Click="btnEnvelopToggle_Click"/>

            <ToggleButton x:Name = "toggleLimits" Margin="0,105.5,10.5,0"
                      VerticalAlignment="Top"  
                      HorizontalAlignment = "Right"
                      Content = "Limits Off"
                      Width="133" Height="39"
                          Click="toggleLimitsClick"

                      Style="{StaticResource ResourceKey=ButtonStyle2}" />

        </Grid>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="255" Grid.Column="1"  Grid.Row="0" Width="715" Margin="0,5,10,0">
          
            <Slider Name="CustomSlider" HorizontalAlignment="Left" 
                  OverridesDefaultStyle="True" Value="64" Maximum="127" Minimum="0"
                Height="255" Width="705" Orientation="Vertical" Grid.Column="1" VerticalAlignment="Stretch"  
                Style="{StaticResource SliderStyle}"  Canvas.ZIndex="3" LostMouseCapture="CusomSlider_LostMouseCapture">
                <Slider.Resources>
                    <clr:String  x:Key="textValue">0</clr:String>
                </Slider.Resources>
            </Slider>
            <Grid x:Name="scaleGrid" Width="55" HorizontalAlignment="Left" Height="215" Canvas.ZIndex="1" VerticalAlignment="Center" >
                
            </Grid>
            <Image Grid.Row="0" 
                   Margin="62,0,10,0" 
                   x:Name="imageSpectrogram" 
                   Stretch="Fill" 
                   Height="205" 
                   Panel.ZIndex="2" >

            </Image>

            <Rectangle Stroke="#1c2040"  
                       RadiusX="8" 
                       RadiusY="8" 
                       StrokeThickness="2" 
                       Fill="Black" />

            <Line Stretch="Fill" 
                  Stroke="#FF1C2040" 
                  Y1="1" 
                  HorizontalAlignment="Left" 
                  Margin="60,0,0,0" />
        </Grid>
        <Grid HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="top" Height="230" Grid.Row="1" Width="715"  Margin="0,-0,10,0">

            <Slider Name="customDepthSlider" HorizontalAlignment="Left" 
                  OverridesDefaultStyle="True" Value="48" Maximum="87" Minimum="23" IsHitTestVisible="False"
                Height="232" Width="705" Orientation="Vertical" Grid.Column="1" VerticalAlignment="Stretch"  
                Style="{StaticResource SliderStyle}"  Canvas.ZIndex="3" LostMouseCapture="customDepthSlider_LostMouseCapture">
                <Slider.Resources>
                    <clr:String  x:Key="textValue">48</clr:String>
                    <clr:String  x:Key="textUnit">mm</clr:String>
                </Slider.Resources>
            </Slider>
            <Grid x:Name="scaleDepthGrid" Height="190" Width="55" HorizontalAlignment="Left"  Canvas.ZIndex="1" VerticalAlignment="Center" >

            </Grid>
            <Image Grid.Row="1" 
                   Margin="62,10,10,10" 
                   x:Name="imageMmode" 
                   Stretch="Fill" 
                   Panel.ZIndex="2">
            </Image>

            <Rectangle Stroke="#1c2040" 
                       RadiusX="8" 
                       RadiusY="8" 
                       StrokeThickness="2" 
                       Fill="Black"/>

            <Line Stretch="Fill" 
                  Stroke="#FF1C2040" 
                  Y1="1" 
                  HorizontalAlignment="Left" 
                  Margin="60,0,0,0"/>  
        </Grid>
    </Grid>
</UserControl>
