                     FontSize="18" 
                     HorizontalAlignment="Right" 
                     TextAlignment="Center"
                     Margin="0,202,16,0" 
                     VerticalAlignment="Top" 
                     Padding="5,2,3,0" 
                     Width="90" 
                     IsReadOnly="True" 
