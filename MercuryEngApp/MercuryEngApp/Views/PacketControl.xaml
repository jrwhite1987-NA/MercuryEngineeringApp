<UserControl x:Class="MercuryEngApp.PacketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:MercuryEngApp"
             mc:Ignorable="d" 
            VerticalAlignment="Stretch"  HorizontalAlignment="Stretch">
    <UserControl.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource"  CollectionViewType="ListCollectionView"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Name="LeftPanlePacket">
            
            <Border Style="{StaticResource ResourceKey=RoundedBorderBlue}" 
                    Width="550"
                    Height="495" 
                    VerticalAlignment="Top" 
                    Margin="10,5,0,0" 
                    Grid.Column="0" 
                    Grid.Row="0">
                <Grid Name="LeftPanelPacketTop" >

                    <Border Style="{StaticResource ResourceKey=RoundedRectangleBlue}" 
                            Height="40" 
                            VerticalAlignment="Top" 
                            Width="548" 
                            Margin="-1,-1,-1,0">

                        <TextBlock Height="17" 
                               Margin="13,8,0,0" 
                               Text="Envelope Tree" 
                               Style="{StaticResource ResourceKey=WhiteLable15ptBold}"/>
                    </Border>
                    <Grid  Margin="0,40,0,5" >
                        <TreeView Name="trvMenu">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type local:ItemsMenu}" ItemsSource="{Binding Items}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25">
                                            </RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"></ColumnDefinition>
                                            <ColumnDefinition Width="100"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}"  VerticalAlignment="Center" Background="Transparent" HorizontalAlignment="Left" Grid.Column="0" Padding="2,0,2,0"/>
                                        <TextBlock Text="{Binding PakcetValue}"  VerticalAlignment="Center" Background="Transparent" HorizontalAlignment="Left" Grid.Column="1" Padding="2,0,2,0"/>
                                    </Grid>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"></Setter>
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>
                    </Grid>
                </Grid>
            </Border>           
        </Grid>
        <Grid Grid.Column="1">
            <Border Style="{StaticResource ResourceKey=RoundedBorderBlue}" 
                    Width="745"
                    Height="495" 
                    VerticalAlignment="Top" 
                    Margin="10,5,10,0" 
                    Grid.Column="0">

                <Grid Name="rightPanelPacketTop" >
                    <Border  Style="{StaticResource ResourceKey=RoundedRectangleBlue}" Height="40" VerticalAlignment="Top" 
                               Width="745" Margin="-1,-1,-1,0" HorizontalAlignment="Right"/>
                    <TextBlock Height="17" Margin="13,8,0,0" Text="Hex Viewer " Style="{StaticResource ResourceKey=WhiteLable15ptBold}"/>
                     <Grid Margin="0,40,0,5" >
                        
                            <DataGrid Name="grdMailbag" Grid.Column="1" DataContext="{StaticResource ItemCollectionViewSource}" AutoGenerateColumns="False" SelectionUnit="Cell" CanUserAddRows="False" ItemsSource="{Binding}" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="Offset" Width="100" Binding="{Binding Path=Offset}" Header="Offset" />
                                    <DataGridTextColumn x:Name="cHx_00" Binding="{Binding Path=Hx_00}" Header="00" />
                                    <DataGridTextColumn x:Name="cHx_01" Binding="{Binding Path=Hx_01}" Header="01" />
                                    <DataGridTextColumn x:Name="cHx_02" Binding="{Binding Path=Hx_02}" Header="02" />
                                    <DataGridTextColumn x:Name="cHx_03" Binding="{Binding Path=Hx_03}" Header="03" />
                                    <DataGridTextColumn x:Name="cHx_04" Binding="{Binding Path=Hx_04}" Header="04" />
                                    <DataGridTextColumn x:Name="cHx_05" Binding="{Binding Path=Hx_05}" Header="05" />
                                    <DataGridTextColumn x:Name="cHx_06" Binding="{Binding Path=Hx_06}" Header="06" />
                                    <DataGridTextColumn x:Name="cHx_07" Binding="{Binding Path=Hx_07}" Header="07" />
                                    <DataGridTextColumn x:Name="cHx_08" Binding="{Binding Path=Hx_08}" Header="08" />
                                    <DataGridTextColumn x:Name="cHx_09" Binding="{Binding Path=Hx_09}" Header="09" />
                                    <DataGridTextColumn x:Name="cHx_0a" Binding="{Binding Path=Hx_0a}" Header="0a" />
                                    <DataGridTextColumn x:Name="cHx_0b" Binding="{Binding Path=Hx_0b}" Header="0b" />
                                    <DataGridTextColumn x:Name="cHx_0c" Binding="{Binding Path=Hx_0c}" Header="0c" />
                                    <DataGridTextColumn x:Name="cHx_0d" Binding="{Binding Path=Hx_0d}" Header="0d" />
                                    <DataGridTextColumn x:Name="cHx_0e" Binding="{Binding Path=Hx_0e}" Header="0e" />
                                    <DataGridTextColumn x:Name="cHx_0f" Binding="{Binding Path=Hx_0f}" Header="0f" />
                                </DataGrid.Columns>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Aqua"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="IsEnabled" Value="False"></Setter>
                                    </Style>
                                </DataGrid.Resources>
                            </DataGrid>
                        
                    </Grid>
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
