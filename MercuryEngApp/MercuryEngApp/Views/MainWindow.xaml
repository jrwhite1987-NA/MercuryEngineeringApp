<Window x:Class="MercuryEngApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  xmlns:wpfsl="http://schemas.softarcs.com/wpfsmartlibrary"
		  WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        xmlns:local="clr-namespace:MercuryEngApp" ResizeMode="CanResizeWithGrip" WindowState="Maximized"
		MinWidth="1366" MinHeight="768" Title="Neural Analytics">
    <Window.Background>
        <ImageBrush ImageSource="/Themes/NA_background_NA0_blank_1366x768.png"/>
    </Window.Background>

    <!--<Window.Resources>
        <DataTemplate DataType="{x:Type local:ExamViewModel}">
            <local:ExamUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ExamViewModel}">
            <local:ExamUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ExamViewModel}">
            <local:ExamUserControl/>
        </DataTemplate>
    </Window.Resources>-->
    <Grid x:Name="LayoutRoot" >
        <Grid Name="TCDControl" 
              Width="185" 
              HorizontalAlignment="Left" 
              Margin='420,15,0,0'>

            <Button Style="{StaticResource ResourceKey=ButttonSplitL}" 
                    HorizontalAlignment="Left" 
                    UseLayoutRounding="True" 
                    VerticalAlignment="Top"/>

            <Button Style="{StaticResource ResourceKey=ButttonSplitR}" 
                    HorizontalAlignment="Right" 
                    UseLayoutRounding="True" 
                    VerticalAlignment="Top"/>

        </Grid>

        <Grid Grid.Row="1" 
              Margin="0,18,0,0" 
              Width="1339">
            <Grid>
                <TabControl Height="547" 
                            VerticalAlignment="Top">
                    <TabControl.Resources >
                        <Style TargetType="TabPanel">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" 
                                                BorderThickness="2,2,2,0" 
                                                Margin="0,0,-1,0">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="#FF9CAFB6" Opacity="0.5"/>
                                            </Border.BorderBrush>
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">

                                                <Setter TargetName="Border" Property="Background" >
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#FF082746" Opacity="0.3"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" >
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#FFE4ECF3" Opacity="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabControl.Background>
                        <SolidColorBrush Color="#FF082E40" Opacity="0" />
                    </TabControl.Background>
                    <TabItem Width="165" Height="38" x:Name="ExamTab" >
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Exam" 
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontFamily="Arial" />
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Width="165" Height="38" x:Name="InfoTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Info"  
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontFamily="Arial" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>
                    <TabItem Width="165" Height="38" x:Name="CalibrationTab" >
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Calibration"  
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontFamily="Arial" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>

                    <TabItem Width="165" Height="38" x:Name="PacketTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Packet"  
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontFamily="Arial" />
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>


                </TabControl>
            </Grid>
        </Grid>
        <Grid Name="FooterTextBox" 
              Margin="25,0,20,20" 
              Width="1315" >
            <Button Content="Clear" 
                    Style="{StaticResource ResourceKey=ButtonStyle1}"  
                    Width="100" Height="30"
                    HorizontalAlignment="Right" 
                    Margin="0,0,12,97"
                    VerticalAlignment="Bottom"/>
            
            <Border  VerticalAlignment="Bottom" 
                     Style="{StaticResource ResourceKey=RoundedBorderBlue}"  >


                <TextBlock HorizontalAlignment="Left" 
                           Height="75" Margin="10,48,10,10" 
                           TextWrapping="Wrap" 
                           Text="Sample Data" 
                           VerticalAlignment="Top" 
                           Width="1310" 
                           Foreground="White" 
                           Padding="5">
                    
                    <TextBlock.Background>
                        <SolidColorBrush Color="#FF0EAACD" Opacity="0.3"/>
                    </TextBlock.Background>
                </TextBlock>

            </Border>
        </Grid>
    </Grid>
</Window>
